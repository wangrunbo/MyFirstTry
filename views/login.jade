doctype
html
    head
        title="Best memory belongs to us"
        meta(charset="UTF-8")

    body
        include layout/_header

        div(class="page-main")
            div(class="page-login")
                div(class="message-box")
                div(class="login-box")
                    div(class="login-header")
                        div(class="login-switch")
                            a(class="login-switch-btn" href="javascript:void(0);")="其他帐号登入"
                        div(class="login-switch[focus]")
                            a(class="login-switch-btn" href="javascript:void(0);")="邮箱登入"
                    div(class="login-panel")
                        div(class="login-alert" style="display: none")
                            span(id="login-alert")=""
                        div(class="login-form")
                            form(id="login" method="post")
                                div(class="login-list")
                                    input(name="u" type="text" placeholder="邮箱")
                                div(class="login-list")
                                    input(name="p" type="password" placeholder="密码")
                            div(class="login-list")
                                div(class="auto-login")
                                    label(for="auto-login")="下次自动登入"
                                    input(id="auto-login" name="autoLogin" value=true type="checkbox")
                                div(class="get-pwd")
                                    a(href="/findpwd")="忘记密码？"
                            div(class="login-list")
                                div(class="login-btn")
                                    a(class="login-btn[0]" href="/register")
                                        button(class="login-btn[1]" type="button")="注 册"
                                div(class="login-btn")
                                    a(class="login-btn[0]" href="/register")
                                        button(class="login-btn[2]" type="button")="登 入"

        include layout/footer
